<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Account Login <i class="fas fa-key"></i></h5>
          <hr>
          <form method="POST" action="/">
            <div class="form-group form-row">
              <label for="length" class="col-md-2 col-form-label">
                使用者名稱
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="user@mail.com" name="email" class="form-control" id="email"
                  value="{{inputData.email}}">
                <small class="text-muted form-text">請輸入您的註冊email</small>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="exclude-characters" class="col-md-2 col-form-label">
                密碼
              </label>
              <div class="col-md-8">
                <input type="password" placeholder="password" name="password" class="form-control" id="password" min="8"
                  max="16" value="{{inputData.password}}">
              </div>
            </div>

            <!--Show error here-->
            {{#if error }}
            <div class="alert alert-danger" role="alert">
              <span class="mr-2">{{error}}</span>
            </div>
            {{/if}}

            <button class="btn btn-success" type="submit">Sign in</button>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>